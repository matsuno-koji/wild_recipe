<h1><%= @recipe.name %></h1>
<h2>作成者:<%= link_to "#{ User.find_by(id: @recipe.user_id).name}", user_path(id: @recipe.user_id) %></h2>
<h3>材料</h3>
<% @recipe.ingredient.each do |ingredient| %>
  <% if ingredient.name.present? %>
  <p><%= ingredient.name %>:<%= ingredient.amount %></p>
  <% end %>
<% end %>
<h3>手順</h3>
<% @recipe.procedure.each do |procedure| %>
  <% if procedure.content.present? %>
    <p><%= procedure.number%>:<%= procedure.content %></p>
  <% end %>
<% end %>

<p>コメント：<%= @recipe.comment %></p>

<% if current_user.like?(@recipe) %>

  <%= form_with url: like_path( current_user.likes.find_by(recipe_id: @recipe.id)), method: :delete, local: true do |f| %>
    <%= hidden_field_tag :recipe_id, @recipe.id %>
    <%= f.submit "イイネを取り消す" %>
  <% end %>
  
<% else %>

  <%= form_with url: likes_path, local: true do |f| %>
    <%= hidden_field_tag :recipe_id, @recipe.id %>
    <%= f.submit "イイネ" %>
  <% end %>
  
<% end %>