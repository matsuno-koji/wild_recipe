<% index = 1 %>
  <div class="formbox procedure-box" data-formno="<%= index %>" >
    <div class="procedure-list flex flex-left">
      <div class="formbox-no"><%= index %></div>:
      <div class="procedure-show" name="number[<%= index %>]"></div>
    </div>

    <div class="procedure-input-textarea">
      <%= form_with model: @procedure, url: procedures_path do |form| %>
        <%= hidden_field_tag :recipe_id, @recipe.id %>
        <%= form.text_area :content, placeholder: "手順を入力しましょう", id: "textarea#{index}" %>
        <%= form.hidden_field :number, value: "#{index}",class: "hidden-number" %>
        <%= form.submit "保存" %>
      <% end %>
    </div>

    <div class="flex flex-end">
      <%= form_with url: procedures_change_before_path do |form| %>
        <%= hidden_field_tag :recipe_id, @recipe.id %>
        <%= hidden_field_tag :number, index, class: "hidden-number" %>
        <%= form.submit "↑", class: "change_content_button" %>
      <% end %>
      
      <%= form_with url: procedures_change_after_path do |form| %>
        <%= hidden_field_tag :recipe_id, @recipe.id %>
        <%= hidden_field_tag :number, index, class: "hidden-number" %>
        <%= form.submit "↓", class: "change_content_button" %>
      <% end %>
    </div>
    <p class="text-right">
      <a class="delete-formbox">削除<a>
    </p>
  </div>
<p class="text-center"><a class="add-form btn midium-btn">追加する</a></p>