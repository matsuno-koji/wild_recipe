<%= form_with url: like_path( current_user.likes.find_by(recipe_id: @recipe.id)), method: :delete, class: "inline-block" do |f| %>
  <%= hidden_field_tag :recipe_id, @recipe.id %>
  <%= button_tag type: "submit" ,class: "like-icon" do %>
    <%= icon('fas','heart') %>
  <% end %>
  <%= link_to liked_recipe_path(@recipe),class: "like-count" do %>
    <%= @recipe.likes.count %>
  <% end %>
<% end %>
