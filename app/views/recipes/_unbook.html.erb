<% if @recipe.present? %>
  <% recipe = @recipe %>
<% else %>
  <% recipe = book_recipe %>
<% end %>
<%= form_with url: book_path( current_user.books.find_by(recipe_id: recipe.id)), method: :delete, class: "inline-block" do |f| %>
  <%= hidden_field_tag :recipe_id, recipe.id %>
  <%= button_tag type: "submit", class: "book-icon" do %>
    <%= icon('fas','bookmark') %>
  <% end %>
<% end %>