<% if @recipe.present? %>
  <% recipe = @recipe %>
<% else %>
  <% recipe = book_recipe %>
<% end %>
<%= form_with url: books_path do |f| %>
  <%= hidden_field_tag :recipe_id, recipe.id %>
  <%= button_tag type: "submit", class: "book-icon" do %>
    <%= icon('far','bookmark') %>
  <% end %>
<% end %>