<%= form_with url: likes_path do |f| %>
  <%= hidden_field_tag :recipe_id, @recipe.id %>
  <%= button_tag type: "submit" do %>
    <%= icon('far','heart') %>
  <% end %>
  <% unless @recipe.likes.count == 0 %>
    <%= link_to liked_recipe_path(@recipe) do %>
      <%= @recipe.likes.count %>イイネ
    <% end %>
  <% end %>
<% end %>