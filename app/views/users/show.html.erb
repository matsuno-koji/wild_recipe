<% provide(:title, "ユーザープロフィール")%>

<div class="flex">
  <img src="http://placehold.jp/100x100.png"></img>
  <div class="profile_text">
    <h3><%= @user.name %></h3>
    <%= render "profile" %>
  </div>
</div>
<ul>
  <li class="profile-tab">投稿</li>
  <li class="profile-tab">イイネ</li>
  <li class="profile-tab">ブックマーク</li>
  <li class="profile-tab">下書き</li>
</ul>

<div class="profile-panel-group">
  <section class="profile-panel is-show">
    <h3>投稿したレシピ(<%= @recipes_count.count %>)</h3>
    <%= render "posted_recipe" %>
    <%= paginate @recipes %>
  </section>

  <section class="profile-panel">
    <h3>イイネしたレシピ(<%= @like_recipes_count.count %>)</h3>
    <%= render "liked_recipe" %>
    <%= paginate @like_recipes, param_name: "like_page" %>
  </section>

  <section class="profile-panel">
    <h3>ブックマークしたレシピ(<%= @book_recipes_count.count %>)</h3>
    <%= render "booked_recipe" %>
    <%= paginate @book_recipes, param_name: "book_page" %>
  </section>

  <section class="profile-panel">
    <% if current_user == @user %>
      <h3>未公開のレシピ(<%= @draft_recipes_count.count %>)</h3>
      <%= render "draft_recipe" %>
    <% end %>
  </section>
</div>